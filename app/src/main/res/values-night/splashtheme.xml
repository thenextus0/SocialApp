<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="SocialAppSplash" parent="Theme.Material3.Dark.NoActionBar">
        <item name="android:windowSplashScreenBackground">@color/splashDarkBG</item>
        <item name="android:windowSplashScreenAnimatedIcon">@drawable/hot_ballon</item>

        <item name="android:windowSplashScreenIconBackgroundColor">@color/splashIconDarkBG</item>
        <item name="android:windowActionBar">true</item>

    </style>

    <style name="SocialAppSplash.h1">
        <item name="android:textSize">25sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#FFECE6E6</item>
    </style>
    <style name="SocialAppSplash.h2">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#FFECE6E6</item>
    </style>
    <style name="SocialAppSplash.h3">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#FFECE6E6</item>
    </style>
    <style name="SocialAppSplash.h4">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">#FFECE6E6</item>
    </style>

    <style name="SocialAppSplash.span">
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">#FFECE6E6</item>
    </style>
    <style name="SocialAppSplash.span.14sp">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">#FFECE6E6</item>
    </style>
    <style name="SocialAppSplash.span.italic">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textColor">#FFECE6E6</item>
        <item name="fontFamily">@font/dancingscript</item>
    </style>
    <style name="SocialAppSplash.span.bold">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#FFECE6E6</item>
        <item name="fontFamily">@font/fjallaone</item>
    </style>

    <style name="SocialAppSplash.textInput">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">#FFECE6E6</item>
        <item name="android:textColorHint">#FFECE6E6</item>
        <item name="boxStrokeColor">@color/white</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="boxStrokeWidthFocused">2dp</item>
    </style>



</resources>